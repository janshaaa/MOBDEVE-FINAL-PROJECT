<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aiwear" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
<!--        <item name="colorPrimaryVariant">@color/green_dark</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
<!--        <item name="colorSecondaryVariant">@color/blue_dark</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton">
        <!-- Customize button properties here -->
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!-- Add more attributes as needed -->
    </style>

    <style name="SettingsButton">
        <!-- Customize button properties here -->
        <item name="android:buttonStyle">?attr/borderlessButtonStyle</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">15dp</item>
        <!-- Add more attributes as needed -->
    </style>

    <style name="ToggleButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.Aiwear" parent="Base.Theme.Aiwear" />
</resources>